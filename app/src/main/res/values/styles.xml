<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="epco">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#AB0A3C</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="IniciarSesion">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#001833</item>
    </style>

    <style name="ExamenActivo">
        <item name="cardBackgroundColor">@color/green</item>
    </style>

    <style name="ExamenInactivo">
        <item name="cardBackgroundColor">@color/red</item>
    </style>

    <style name="IniciarSesionSub">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#858494</item>
    </style>


    <style name="MyTimePickerDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:timePickerStyle">@style/MyTimePicker</item>
    </style>

    <style name="MyTimePicker">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>